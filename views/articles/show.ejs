  <body>
    <header>
      <nav>
        <ul>
          <li>
            <a href="/">Home</a>
          </li>
          <li>
            <a href="/articles">Articles Index</a>
          </li>
        </ul>
      </nav>
    </header>
    <main>
      <section>
        <h1><%= article.title %></h1>
        <small>by: <a href="/authors/<%=author._id%>"><%=author.name%></a></small>   <p><%= article.body %></p>
